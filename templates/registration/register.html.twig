{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container mt-5" style="max-width: 75%;">

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center mb-4">Cr√©er un compte</h1>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.firstname, {'label_attr': {'class': 'fw-bold text-center'}}) }}
        {{ form_row(registrationForm.lastname, {'label_attr': {'class': 'fw-bold text-center'}}) }}
        {{ form_row(registrationForm.email, {'label_attr': {'class': 'fw-bold text-center'}}) }}
        {{ form_row(registrationForm.plainPassword.first, {'label_attr': {'class': 'fw-bold text-center'}}) }}
        {{ form_row(registrationForm.plainPassword.second, {'label_attr': {'class': 'fw-bold text-center'}}) }}
        {{ form_row(registrationForm.imageFile, {'label_attr': {'class': 'fw-bold text-center'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'fw-bold'}}) }}

        <button type="submit" class="btn btn-success w-100 mt-3">S'inscrire</button>

    {{ form_end(registrationForm) }}

</div>

{% endblock %}
