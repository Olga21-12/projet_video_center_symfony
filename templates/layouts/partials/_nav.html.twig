                     class="rounded-circle me-2"
                     style="width:40px; height:40px; object-fit:cover;">
            {% endif %}
            <span class="fw-bold">{{ app.user.firstname }}</span>
        </a>
    {% endif %}
</div>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link {{app.current_route == 'app_home' ? 'active' : ''}}" href={{ path('app_home') }}>{{'navBar.home'|trans}}</a>
                    </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {{app.current_route == 'app_video_new' ? 'active' : ''}}" href={{ path('app_video_new') }}>{{'navBar.ajouterVideo'|trans}}</a>
