<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm position-relative fixed-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <img src="{{ asset('image/logo.png') }}" alt="Logo" class="logo-img me-2">
            VideoCenter Olala
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {% if app.user %}
        <div class="nav-user-center">
    
        <a href="{{ path('app_profile') }}" class="d-flex align-items-center text-decoration-none">
            {% if app.user.imageName %}
                <img src="{{ asset('uploads/users/' ~ app.user.imageName) }}"
                     alt="{{ app.user.firstname }}"
                     class="rounded-circle me-2"
                     style="width:40px; height:40px; object-fit:cover;">
            {% else %}
                <img src="{{ asset('image/default-avatar.png') }}"
